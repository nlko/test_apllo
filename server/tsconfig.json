{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false,
    "rootDir": "src",
    "watch": true,
    "outDir": "app"
  },
  "exclude": [
    "node_modules",
    "typings"
  ]
}
